<!DOCTYPE html>
<div class="jumbotron user-profile">
  <div class="container">
    <div class="row">
      <div class="col-sm-8 text-right">
	<h1><%= user.fullname %></h1>
	<h3><%= user.age %> years old &mdash; from <%= user.fitnessCorner %></h3>
	<h3>Also known as <em><%= user.auth.username %></em></h3>
      </div>
      <div class="col-sm-3 pull-right">
	<img src="/images/avatar.png" alt="avatar" class="img-circle img-responsive">
      </div>
    </div>
  </div>
</div>

<div class="container-fluid awards text-center">
  <div class="row">
    <h2>Achievements &amp; Awards</h2>
  </div>

  <div class="row achievements">
    <div class="col-sm-2 col-sm-offset-1">
      <img src="holder.js/175x175/auto" class="img-responsive img-rounded">
      <h5>Beginner Level</h5>
    </div>
    <div class="col-sm-2">
      <img src="holder.js/175x175/auto" class="img-responsive img-rounded">
      <h5>Intermediate Level</h5>
    </div>
    <div class="col-sm-2">
      <img src="holder.js/175x175/auto" class="img-responsive img-rounded">
      <h5>Advanced Level</h5>
    </div>
    <div class="col-sm-2">
      <img src="holder.js/175x175/auto" class="img-responsive img-rounded">
      <h5>Professional Level</h5>
    </div>
    <div class="col-sm-2">
      <img src="holder.js/175x175/auto" class="img-responsive img-rounded">
      <h5>Expert Level</h5>
    </div>
  </div>

  <div class="row medals">
    <h4>Earn the medals below and show them to your friends!</h4>
    <% _.each(medals, function(medal) { %>
    <div class="col-sm-4">
      <div class="row">
	<div class="col-sm-4 medal-img">
	  <img src="/images/<%= medal.img %>.png" class="img-responsive img-circle pull-right <% if(medal.obtained) { %> medal-obtained<% } %>">
	</div>
	<div class="col-sm-8 text-left">
	  <p class="medal-desc"><%= medal.description %></p>
	</div>
      </div>
    </div>
    <% }) %>
  </div>
</div>

